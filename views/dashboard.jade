extends layout

block content
  include navbar
  link(href='/css/style.css', rel='stylesheet')
  link(href='/css/medium-editor.min.css', rel='stylesheet')
  link(href='/css/flat.min.css', rel='stylesheet')

  .ignore(style="font-family:Lato;")
  .ignore(style="font-family:Merriweather;")

  .container
    .row.header
      include profile_component

      .container.col-md-8.dashboard-feed
        .row.col-md-10.col-md-offset-1
          .form-group
            .input-group.squall-title
              .form-control-wrapper
               textarea#textArea(rows="1", maxLength="117", tabindex="2", autofocus, placeholder="Title/Tweet. You can tag @username, paste links or use #hashtags.")
              .input-group-addon
            .text-length.light-gray 0/90 characters left

          //- Text editor
          .panel-default.squall-content
            .panel-body#t
              .editable.textBox(tabindex="1", data-placeholder="Type your text")#m
          .post-length.light-gray 0/2000 characters left

          //- Tweet button
          .btn-group.pull-right
            a.btn.btn-info.tweet-button
              | Publish
              .ripple-wrapper

        .row.col-md-10.col-md-offset-1
          //include leaderboard_component
          each val, index in posts
            .row.header
              .col-lg-12
                .post-container
                  .post-author
                    a(href="/#{val.author}")
                      img.author-image(src="#{avatar_urls[val.author]}")
                      .author-name #{val.author}
                  .post-body
                    h1.post-title
                      a(href="/#{val.author}/#{val.slug}")
                        span #{val.title}
                    .post-content!= val.content
                  .post-footer
                    .post-meta
                      .post-time #{val.created_at}
                      .post-stats
                        span.retweets
                          strong #{val.viewCount}
                          |  Views
                        //
                          span.favorites
                            strong 180
                            |  Favorites
              //      .post-social
                //      .tweet-button
                  //      a(href='#')
                    //      i.fa.fa-twitter
                      //    |  Tweet This
                      //
                        .post-share
                          a(href='#')
                            i.fa.fa-facebook-official
                          a(href='#')
                            i.fa.fa-google-plus-square
                          a(href='#')
                            i.fa.fa-pinterest-square

  //- The result of posting the tweet
  .col-lg-6.col-lg-offset-3.tweetresult
    .bs-component
      .alert.alert-dismissable
        button.close(type="button", data-dismiss="alert") Ã—
        h4 You just hacked the Tweetstorm.
        .embed

  img#image(style="display:none")
  span#profileUsername(style="display:none") #{user.username}


  include footer
